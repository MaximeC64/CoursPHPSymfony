{{ form_start(form) }}
<div class="form-row">
    <div class="col-md-4">
        {{ form_label(form.nom, 'Nom') }}
        {{ form_widget(form.nom) }}

        <small>{{ form_help(form.nom) }}</small>

        <div class="form-error">
            {{ form_errors(form.nom) }}
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}
