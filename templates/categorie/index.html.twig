{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
<div class="offset-3 col-md-6">
    <h1>Categorie index</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <th scope="row">{{ categorie.id }}</th>
                <td>{{ categorie.nom }}</td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('categorie_show', {'id': categorie.id}) }}">show</a>
                    <a class="btn btn-outline-primary" href="{{ path('categorie_edit', {'id': categorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('categorie_new') }}">Create new</a>
</div>
{% endblock %}
