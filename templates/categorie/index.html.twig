{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
<div class="offset-3 col-md-6">
    <div class="card">
        <div class="card-header">
            <h1>Categorie index</h1>
        </div>
        <div class="card-body">
            <table class="table table-dark">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for categorie in categories %}
                    <tr>
                        <th scope="row">{{ categorie.id }}</th>
                        <td>{{ categorie.nom }}</td>
                        <td>
                            <a class="btn btn-outline-primary" href="{{ path('categorie_show', {'id': categorie.id}) }}">Voir</a>
                            <a class="btn btn-outline-primary" href="{{ path('categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Pas d'entrée en base de données</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a class="btn btn-primary" href="{{ path('categorie_new') }}">Ajouter</a>
        </div>
    </div>



</div>
{% endblock %}
