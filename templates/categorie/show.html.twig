{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
<div class="offset-3 col-md-6">
    <div class="card">
        <div class="card-header">
            <h1>Categorie</h1>
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ categorie.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ categorie.nom }}</td>
                </tr>
                </tbody>
            </table>
            <div class="row">
                <div class="col-md-2">
                    <a class="btn btn-outline-dark" href="{{ path('categorie_index') }}">Retour</a>
                </div>
                <div class="col-md-2">
                    {{ include('categorie/_delete_form.html.twig') }}
                </div>
                <div class="col-md-2">
                    <a class="btn btn-primary" href="{{ path('categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                </div>
            </div>
        </div>
    </div>



</div>
{% endblock %}
