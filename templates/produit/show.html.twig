{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="offset-3 col-md-6">
    <div class="card">
        <div class="card-header">
            <h1>Produit</h1>
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ produit.id }}</td>
                </tr>
                <tr>
                    <th>Libelle</th>
                    <td>{{ produit.libelle }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ produit.prix }}</td>
                </tr>
                <tr>
                    <th>Cat√©gorie</th>
                    <td>{{ produit.categorie.nom }}</td>
                </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-md-2">
                    <a class="btn btn-outline-dark" href="{{ path('produit_index') }}">Retour</a>
                </div>
                <div class="col-md-2">
                    {{ include('produit/_delete_form.html.twig') }}
                </div>
                <div class="col-md-2">
                    <a class="btn btn-primary" href="{{ path('produit_edit', {'id': produit.id}) }}">Modifier</a>
                </div>
            </div>
        </div>
    </div>




</div>
{% endblock %}
